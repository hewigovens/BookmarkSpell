{
  "name": "BookmarkSpell",
  "version": "0.6.6",
  "description": "Save a bookmark and wait for magic happens. :)",

  "background": {
    "page": "background.html"
  },

  "browser_action": {
      "default_icon": {
        "19": "img/icon19.png",
        "38": "img/icon38.png" 
        }, 
      "default_title": "BookmarkSpell",
      "default_popup": "popup.html"
    },

  "options_page": "options.html",

  "icons": { "128": "img/icon.png" },

  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "notifications",
    "*://*/*"
  ],
  
  "web_accessible_resources": [
      "img/icon48.png",
      "chrome_oauth_receiver.html"
    ],

  "content_security_policy": "script-src 'self' https://www.dropbox.com; object-src 'self'",
  "manifest_version": 2
}
