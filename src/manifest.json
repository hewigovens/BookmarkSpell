{
  "name": "BookmarkSpell",
  "version": "0.4.7",
  "description": "Save a bookmark and wait for magic happens. :)",

  "background": {
    "page": "background.html"
  },

  "browser_action": {
      "default_icon": {
        "19": "img/icon19.png",
        "38": "img/icon38.png" 
        }, 
      "default_title": "BookmarkSpell",
      "default_popup": "popup.html"
    },

  "options_page": "options.html",

  "icons": { "128": "img/icon.png" },

  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "notifications",
    "*://*.dropbox.com/*",
    "*://*.readability.com/*"
  ],
  
  "web_accessible_resources": [
      "img/icon48.png"
    ],

  "manifest_version": 2
}
